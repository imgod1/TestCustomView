<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <com.kk.imgod.testcustomview.views.ProgressView
        android:id="@+id/pv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:completedColor="@color/colorAccent"
        app:lineHeight="2dp"
        app:progressTextColor="@color/colorPrimaryDark"
        app:progressTextSize="18dp"
        app:waitngColor="@color/colorPrimary" />

    <com.kk.imgod.testcustomview.views.ProgressViewLine
        android:id="@+id/pvl_main"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:completedColor="@color/colorAccent"
        app:lineHeight="2dp"
        app:progressTextColor="@color/colorPrimaryDark"
        app:progressTextSize="18dp"
        app:waitngColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start" />

        <Button
            android:id="@+id/btn_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pause" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset" />
    </LinearLayout>


</LinearLayout>
